[branch]
	autosetupmerge = true
	sort = -committerdate
[color]
	ui = auto
[diff]
	algorithm = patience
	mnemonicprefix = true
	renames = copies
	tool = diffmerge
[merge]
	stat = true
	tool = diffmerge
[rerere]
	enabled = true
[user]
	name = Nils Jonsson
	email = nils@alumni.rice.edu
[alias]
	current-branch = rev-parse --abbrev-ref HEAD
	lg = log --abbrev-commit --decorate --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	spring-cleaning = for-each-ref --format='%(refname:short) ... %(committerdate:short)' --sort=-committerdate
	sum = "!PAGER=cat git show HEAD --format=format:%h%n --no-patch"
	touch = "!git commit --amend --date=\"`date`\" --no-edit" $*
[push]
	autoSetupRemote = true
	default = simple
[core]
	excludesfile = /Users/nils/.gitignore_global
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true
[tag]
	sort = version:refname
[pull]
	rebase = true
[gui]
	fontdiff = -family Mensch -size 13 -weight normal -slant roman -underline 0 -overstrike 0
	diffcontext = 10
[pager]
	branch = false
[init]
	defaultBranch = main
